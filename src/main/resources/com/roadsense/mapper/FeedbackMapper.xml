<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadsense.mapper.FeedbackMapper">

    <resultMap id="BaseResultMap" type="com.roadsense.entity.pojo.Feedback">
            <id property="fbackId" column="fback_id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="fbackImg" column="fback_img" jdbcType="VARCHAR"/>
            <result property="fbackTime" column="fback_time" jdbcType="TIMESTAMP"/>
            <result property="verifyState" column="verify_state" jdbcType="VARCHAR"/>
            <result property="pitId" column="pit_id" jdbcType="BIGINT"/>
            <result property="desInfo" column="des_info" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="countByStatus" resultType="java.lang.Integer">
        select count(fback_id) from t_feedback where verify_state = #{status}
    </select>


    <select id="list" resultMap="BaseResultMap">
        select * from t_feedback
        <where>
            <if test="userId != null">and user_id = #{userId}</if>
            <if test="roadId != null">and road_id = #{roadId}</if>
            <if test="roadName != null and roadName != ''">and road_name like concat('%', #{roadName}, '%')</if>
            <if test="desInfo != null and desInfo != ''">and des_info like concat('%', #{desInfo}, '%')</if>
            <if test="fbackImg != null and fbackImg != ''">and fback_img = #{fbackImg}</if>
            <if test="fbackTime != null">and fback_time = #{fbackTime}</if>
            <if test="verifyState != null">and verify_state = #{verifyState}</if>
            <if test="pitId != null">and pit_id = #{pitId}</if>
        </where>
    </select>


</mapper>
