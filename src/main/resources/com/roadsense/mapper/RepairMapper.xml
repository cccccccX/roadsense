<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadsense.mapper.RepairMapper">

    <resultMap id="BaseResultMap" type="com.roadsense.pojo.Repair">
            <id property="repairId" column="repair_id" jdbcType="BIGINT"/>
            <result property="pitId" column="pit_id" jdbcType="BIGINT"/>
            <result property="repairState" column="repair_state" jdbcType="VARCHAR"/>
            <result property="handlerId" column="handler_id" jdbcType="BIGINT"/>
            <result property="handleTime" column="handle_time" jdbcType="TIMESTAMP"/>
    </resultMap>


    <select id="countByPitsAndTime" resultType="java.lang.Integer">
        SELECT COUNT(repair_id) FROM t_repair WHERE pit_id IN
            <foreach collection="pitIds" open="(" close=")" separator="," item="pitId">
                #{pitId}
            </foreach>
            and repair_state = #{status}
            AND handle_time &gt;= #{beginTime} AND handle_time &lt;= #{endTime}
    </select>


    <select id="countByStatus" resultType="java.lang.Integer">
        select count(repair_id) from t_repair where repair_state = #{status}
    </select>


    <select id="getDistinctPitIds" resultType="java.lang.Integer">
        select distinct(pit_id) from t_repair
    </select>

    <select id="selectByPitId" resultMap="BaseResultMap">
        select * from t_repair where pit_id = #{id}
    </select>
    
    
    <select id="pageQuery" resultType="com.roadsense.vo.RepairPageVO">
        SELECT repair.*, pit.img AS image
        FROM
            t_repair AS REPAIR,
            t_pitinfo AS pit,
            t_roadinfo AS road
        <where>
            repair.pit_id = pit.pit_id
          AND pit.road_id = road.road_id
            <if test="roadName != null and roadName != ''">AND road.road_name LIKE concat('%', #{roadName}, '%')</if>
            <if test="pitId != null">and pit_id = #{pitId}</if>
            <if test="handlerId != null">and handler_id = #{handlerId}</if>
            <if test="repairStatus != null">and repair_status = #{repairStatus}</if>
        </where>
    </select>


</mapper>
